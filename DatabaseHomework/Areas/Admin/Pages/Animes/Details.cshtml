@page
@model DatabaseHomework.Areas.Admin.Pages.Animes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Anime</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anime.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Anime.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anime.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Anime.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anime.Episodes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Anime.Episodes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anime.AnimeGenres)
        </dt>
        <dd class="col-sm-10">
            @foreach (var g in Model.Anime.AnimeGenres)
            {
                @if (g == Model.Anime.AnimeGenres.Last())
                {
                    @(g.Genre.Name)
                }
                else
                {
                    @(g.Genre.Name + " | ")
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reviews)
        </dt>
        <dd class="col-sm-10">
            @foreach (var g in Model.Reviews.Reviews)
            {
                @if (g == Model.Reviews.Reviews.Last())
                {
                    @(g.Mark)
                    @(g.Description + "\n")
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Anime.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
