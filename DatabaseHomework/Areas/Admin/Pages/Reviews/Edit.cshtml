@page
@model DatabaseHomework.Areas.Admin.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ID" />
            <div class="form-group">
                <label asp-for="Review.Mark" class="control-label"></label>
                <input asp-for="Review.Mark" class="form-control" />
                <span asp-validation-for="Review.Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Description" class="control-label"></label>
                <input asp-for="Review.Description" class="form-control" />
                <span asp-validation-for="Review.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.UserID" class="control-label"></label>
                <select asp-for="Review.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Review.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.AnimeID" class="control-label"></label>
                <select asp-for="Review.AnimeID" class="form-control" asp-items="ViewBag.AnimeID"></select>
                <span asp-validation-for="Review.AnimeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
